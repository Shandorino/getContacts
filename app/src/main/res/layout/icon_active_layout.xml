<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/iconLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/albunBacgroundIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/album_active_icon_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_baseline_book_24"
        app:layout_constraintStart_toStartOf="@id/albunBacgroundIcon"
        app:layout_constraintTop_toTopOf="@id/albunBacgroundIcon"
        app:layout_constraintEnd_toEndOf="@id/albunBacgroundIcon"
        app:layout_constraintBottom_toBottomOf="@id/albunBacgroundIcon"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="album"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/albunBacgroundIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>