<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:drawableStart="@drawable/ic_baseline_dehaze_24"
                android:drawableEnd="@drawable/ic_baseline_cast_24"
                android:drawablePadding="10dp"
                android:text="Search Hiking"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchLayout"
            android:text="Create new"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/iconLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingVertical="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            app:layout_constraintTop_toBottomOf="@id/createText">

            <ImageView
                android:id="@+id/albunBacgroundIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/album_icon_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_book_24"
                app:layout_constraintStart_toStartOf="@id/albunBacgroundIcon"
                app:layout_constraintTop_toTopOf="@id/albunBacgroundIcon"
                app:layout_constraintEnd_toEndOf="@id/albunBacgroundIcon"
                app:layout_constraintBottom_toBottomOf="@id/albunBacgroundIcon"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="album"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albunBacgroundIcon"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/iconLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iconLayout1"
            android:paddingVertical="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            app:layout_constraintTop_toBottomOf="@id/createText">

            <ImageView
                android:id="@+id/photoBookBackgroundIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phonobook_icon_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_menu_book_24"
                app:layout_constraintStart_toStartOf="@id/photoBookBackgroundIcon"
                app:layout_constraintTop_toTopOf="@id/photoBookBackgroundIcon"
                app:layout_constraintEnd_toEndOf="@id/photoBookBackgroundIcon"
                app:layout_constraintBottom_toBottomOf="@id/photoBookBackgroundIcon"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo Book"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photoBookBackgroundIcon"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/iconLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iconLayout2"
            android:paddingVertical="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            app:layout_constraintTop_toBottomOf="@id/createText">

            <ImageView
                android:id="@+id/movieBackgroundIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/movie_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_movie_24"
                app:layout_constraintStart_toStartOf="@id/movieBackgroundIcon"
                app:layout_constraintTop_toTopOf="@id/movieBackgroundIcon"
                app:layout_constraintEnd_toEndOf="@id/movieBackgroundIcon"
                app:layout_constraintBottom_toBottomOf="@id/movieBackgroundIcon"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movieBackgroundIcon"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/iconLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iconLayout3"
            android:paddingVertical="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            app:layout_constraintTop_toBottomOf="@id/createText">

            <ImageView
                android:id="@+id/colageBackgroundIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/collage_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_auto_awesome_mosaic_24"
                app:layout_constraintStart_toStartOf="@id/colageBackgroundIcon"
                app:layout_constraintTop_toTopOf="@id/colageBackgroundIcon"
                app:layout_constraintEnd_toEndOf="@id/colageBackgroundIcon"
                app:layout_constraintBottom_toBottomOf="@id/colageBackgroundIcon"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/colageBackgroundIcon"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/iconLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iconLayout4"
            android:paddingVertical="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            app:layout_constraintTop_toBottomOf="@id/createText">

            <ImageView
                android:id="@+id/animBackgroundIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/anim_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_auto_awesome_motion_24"
                app:layout_constraintStart_toStartOf="@id/animBackgroundIcon"
                app:layout_constraintTop_toTopOf="@id/animBackgroundIcon"
                app:layout_constraintEnd_toEndOf="@id/animBackgroundIcon"
                app:layout_constraintBottom_toBottomOf="@id/animBackgroundIcon"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/animBackgroundIcon"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/firstCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iconLayout1"
            >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/addIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_baseline_note_add_24"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/addIcon"
                        android:text="Photo book"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="16dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_close_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="16dp"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/addIcon"
                        android:text="Print your summer memories"
                        android:paddingTop="16dp"
                        android:paddingHorizontal="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="24sp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/subTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        android:text="Enjoy free shipping on photo books"
                        android:padding="12dp"
                        android:paddingHorizontal="16dp"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/mainImage"
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"
                        app:layout_constraintTop_toBottomOf="@id/subTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:scaleType="centerCrop"
                        android:paddingBottom="20dp"
                        android:src="@drawable/microchip"/>

                    <ImageView
                        android:id="@+id/forwardButton"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_arrow_forward_24"
                        app:layout_constraintTop_toBottomOf="@id/mainImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_margin="10dp"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/forwardButton"
                        app:layout_constraintTop_toBottomOf="@id/mainImage"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Get started"
                        android:layout_marginHorizontal="25dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#3F51B5"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/secondCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/firstCard"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/awsomeIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_baseline_auto_awesome_24"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/awsomeIcon"
                    android:text="Stylized photo"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="16dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_close_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="16dp"
                    />


                <ImageView
                    android:id="@+id/mainImage2"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    app:layout_constraintTop_toBottomOf="@id/awsomeIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="20dp"
                    android:src="@drawable/field"/>

                <ImageView
                    android:id="@+id/forwardButton2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_arrow_forward_24"
                    app:layout_constraintTop_toBottomOf="@id/mainImage2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="10dp"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/forwardButton2"
                    app:layout_constraintTop_toBottomOf="@id/mainImage2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Get started"
                    android:layout_marginHorizontal="25dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/secondCard"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/magicIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_magic_24"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/magicIcon"
                    android:text="Fantasy"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="16dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_close_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="16dp"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your possible fantasy"
                    android:id="@+id/title2"
                    app:layout_constraintTop_toBottomOf="@id/magicIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="16dp"
                    android:textSize="30sp"
                    />


                <ImageView
                    android:id="@+id/mainImage3"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    app:layout_constraintTop_toBottomOf="@id/title2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="20dp"
                    android:src="@drawable/audi"/>

                <ImageView
                    android:id="@+id/forwardButton3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_arrow_forward_24"
                    app:layout_constraintTop_toBottomOf="@id/mainImage3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="10dp"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/forwardButton3"
                    app:layout_constraintTop_toBottomOf="@id/mainImage3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Get started"
                    android:layout_marginHorizontal="25dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>



    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>





















